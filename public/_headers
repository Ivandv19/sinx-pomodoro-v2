# Security Headers - Aplicados a todas las rutas
/*
  # Previene clickjacking
  X-Frame-Options: DENY
  
  # Previene MIME-sniffing
  X-Content-Type-Options: nosniff
  
  # Protección XSS para navegadores legacy
  X-XSS-Protection: 1; mode=block
  
  # Control de referrer
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Deshabilita APIs no necesarias
  Permissions-Policy: camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()
  
  # Fuerza HTTPS por 1 año
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Content Security Policy - Umami Analytics + Cloudflare Turnstile
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://static.cloudflareinsights.com https://umami.fluxdv.icu https://challenges.cloudflare.com; style-src 'self' 'unsafe-inline' https://challenges.cloudflare.com; img-src 'self' data: https://pomodoro-assets.mgdc.site; font-src 'self' data:; connect-src 'self' https://cloudflareinsights.com https://umami.fluxdv.icu https://challenges.cloudflare.com; frame-src https://challenges.cloudflare.com; media-src 'self' https://pomodoro-assets.mgdc.site; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; object-src 'none'; upgrade-insecure-requests;

# Cache Headers para Assets Estáticos (JS, CSS)
# Edge: 30 días | Browser: 1 año (immutable porque tienen hash en el nombre)
/*.js
  Cache-Control: public, max-age=31536000, s-maxage=2592000, immutable

/*.css
  Cache-Control: public, max-age=31536000, s-maxage=2592000, immutable

# Fuentes Web
# Edge: 30 días | Browser: 1 año
/*.woff2
  Cache-Control: public, max-age=31536000, s-maxage=2592000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, s-maxage=2592000, immutable

# Imágenes
# Edge: 7 días | Browser: 1 año
/*.png
  Cache-Control: public, max-age=31536000, s-maxage=604800

/*.jpg
  Cache-Control: public, max-age=31536000, s-maxage=604800

/*.jpeg
  Cache-Control: public, max-age=31536000, s-maxage=604800

/*.svg
  Cache-Control: public, max-age=31536000, s-maxage=604800

/*.webp
  Cache-Control: public, max-age=31536000, s-maxage=604800

/*.ico
  Cache-Control: public, max-age=31536000, s-maxage=604800

# HTML - Cache corto en edge, revalidación en browser
# Edge: 1 hora | Browser: revalidar siempre
/*.html
  Cache-Control: public, max-age=0, s-maxage=3600, must-revalidate

# Manifest y Service Worker - Sin cache
/manifest.json
  Cache-Control: public, max-age=0, must-revalidate

/sw.js
  Cache-Control: public, max-age=0, must-revalidate
