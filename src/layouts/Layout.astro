---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Import Outfit Font
// Import Outfit Font
import '@fontsource/outfit';

// 1. Definimos las propiedades que aceptará el Layout
interface Props {
	title: string;
	description?: string; // El ? significa que es opcional
	image?: string;
    lang?: string;
}

// 2. Extraemos los valores o ponemos unos por defecto
const { 
	title = "Sinx Pomodoro",
	description = "Maximiza tu productividad y concentración. La herramienta ideal para estudiantes, profesionales y creativos que buscan enfoque total.", 
	image = "https://pomodoro-assets.mgdc.site/og-image.png",
    lang = "es"
} = Astro.props;

const jsonLdDescription = lang === 'en' 
    ? "A minimalist Pomodoro timer designed to improve productivity and focus." 
    : "Un temporizador Pomodoro minimalista diseñado para mejorar la productividad y el enfoque.";
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="https://pomodoro-assets.mgdc.site/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		
		<title>{title}</title>
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
		<meta name="keywords" content="pomodoro, timer, focus, productivity, study, work, technique, tomato, temporizador, enfoque, productividad, estudio, trabajo, tecnica" />
		
		<link rel="alternate" hreflang="x-default" href="https://sinx-pomodoro.mgdc.site" />
		<link rel="alternate" hreflang="es" href="https://sinx-pomodoro.mgdc.site" />
		<link rel="alternate" hreflang="en" href="https://sinx-pomodoro.mgdc.site/en" />

		<ClientRouter />
		<!-- Umami Analytics -->
		<script defer src="https://umami.fluxdv.icu/stats" data-website-id="aa9f0349-5fd8-422a-a8b9-6a8eb0935c5a"></script>
		<script is:inline>
			// 1. Core Logic for Theme Application
			const getTheme = () => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
					return localStorage.getItem('theme');
				}
				if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
					return 'business';
				}
				return 'nord';
			};

			const applyTheme = (theme) => {
				document.documentElement.setAttribute('data-theme', theme);
				if (theme === 'business') {
					document.documentElement.classList.add('dark');
				} else {
					document.documentElement.classList.remove('dark');
				}
				localStorage.setItem('theme', theme);
				
				// Sync checkbox state if it exists
				const controller = document.querySelector('.theme-controller');
				if (controller) {
					controller.checked = theme === 'business';
				}
			};

			// 2. Initialize immediately to avoid FOUC
			const currentTheme = getTheme();
			applyTheme(currentTheme);
			document.documentElement.setAttribute('data-theme-initialized', 'true');

			// 3. Event Listeners for Persistence (Runs on every navigation)
			const onPageLoad = () => {
				const theme = getTheme();
				applyTheme(theme);

				const controller = document.querySelector('.theme-controller');
				if (controller) {
					controller.checked = theme === 'business';
					controller.addEventListener('change', (e) => {
						const newTheme = e.target.checked ? 'business' : 'nord';
						applyTheme(newTheme);
					});
				}
			};

			document.addEventListener('astro:page-load', onPageLoad);
			document.addEventListener('astro:after-swap', () => applyTheme(getTheme()));
		</script>
		
		<meta name="description" content={description} />

		<script type="application/ld+json" set:html={JSON.stringify({
			  "@context": "https://schema.org",
			  "@type": "SoftwareApplication",
			  "name": "Sinx Pomodoro",
			  "operatingSystem": "Any",
			  "applicationCategory": "ProductivityApplication",
			  "offers": {
				"@type": "Offer",
				"price": "0",
				"priceCurrency": "USD"
			  },
			  "description": jsonLdDescription,
              "inLanguage": lang
			})}>
		</script>

		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:image" content={image} />
		<meta property="og:url" content={Astro.url} />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={image} />
	</head>
	<body class="min-h-screen flex flex-col bg-base-100 antialiased transition-colors duration-400">
		<Header />
		<main class="grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 animate-fade-in-up">
			<slot />
		</main>
		<Footer />
	</body>
</html>