---
// src/components/Footer.astro
import { useTranslations } from '../i18n/utils';

const currentLang = Astro.currentLocale || 'es';
const t = useTranslations(currentLang as 'es' | 'en');
const year = new Date().getFullYear();
---
<footer class="footer footer-center p-10 bg-base-200 text-base-content rounded-t-2xl mt-auto">
  
  <nav class="grid grid-flow-col gap-4">
    <a href={currentLang === 'en' ? '/en/about' : '/about'} class="link link-hover">{t('footer.whatis')}</a>
  </nav> 

  <aside>
    <div class="flex items-center gap-2 justify-center mb-2">
        <span class="text-2xl">üçÖ</span>
        <span class="font-bold text-xl tracking-tight">Pomodoro</span>
    </div>
    
    <p class="font-medium">
      {t('footer.slogan')}
    </p>

    <p class="text-xs mt-4">
        {t('footer.developed')} <span class="font-bold">Sinx</span>
    </p>

    <div class="flex flex-wrap justify-center gap-2 mt-1 mb-2">
        <span class="badge badge-outline badge-xs">Astro</span>
        <span class="badge badge-outline badge-xs">Preact</span>
        <span class="badge badge-outline badge-xs">Tailwind</span>
        <span class="badge badge-outline badge-xs">Bun</span>
        <span class="badge badge-outline badge-xs">Cloudflare</span>
    </div>
    
    <p class="text-xs opacity-75">Copyright ¬© {year} - {t('footer.rights')}</p>
  </aside>
</footer>