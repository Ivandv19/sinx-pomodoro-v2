---
// src/components/Footer.astro
import { useTranslations } from '../i18n/utils';

const currentLang = Astro.currentLocale || 'es';
const t = useTranslations(currentLang as 'es' | 'en');
const year = new Date().getFullYear();
---
<footer class="bg-base-200 text-base-content rounded-t-2xl mt-auto transition-colors duration-400 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.1),0_-2px_4px_-1px_rgba(0,0,0,0.06)]">
  <div class="footer p-10 w-full max-w-7xl mx-auto flex flex-col md:flex-row items-center justify-between gap-6 md:gap-4">
    <nav class="order-1 md:order-1 w-full md:w-auto flex justify-center md:justify-start mb-6 md:mb-0">
        <a href={currentLang === 'en' ? '/en/about' : '/about'} 
        class="inline-block px-4 py-2 rounded-lg bg-base-300/50 hover:bg-base-300 transition-colors text-lg font-bold">
        {t('footer.whatis')} <span>‚Üí</span>
        </a>
    </nav>

    <aside class="order-2 md:order-2 flex flex-col items-center w-full md:w-auto text-center">
        <div class="flex items-center gap-2 justify-center mb-2">
            <span class="text-2xl">üçÖ</span>
            <span class="font-bold text-xl tracking-tight">Pomodoro</span>
        </div>
        
        <p class="font-medium">
        {t('footer.slogan')}
        </p>

        <p class="text-xs mt-4">
            {t('footer.developed')} <span class="font-bold">Sinx</span>
        </p>

        <div class="flex flex-wrap justify-center gap-2 mt-1 mb-2">
            <span class="badge badge-outline badge-xs">Astro</span>
            <span class="badge badge-outline badge-xs">Preact</span>
            <span class="badge badge-outline badge-xs">Tailwind</span>
            <span class="badge badge-outline badge-xs">Bun</span>
            <span class="badge badge-outline badge-xs">Cloudflare</span>
        </div>
        
        <p class="text-xs opacity-75">Copyright ¬© {year} - {t('footer.rights')}</p>
    </aside>
  </div>
</footer>