---
// src/components/Header.astro
import { getRelativeLocaleUrl } from 'astro:i18n';
import { useTranslations } from '../i18n/utils';
import LanguagePicker from './LanguagePicker.astro';

import { auth } from '../lib/auth';
import LogoutButton from './LogoutButton';

// 1. Detectar idioma actual
const currentLang = Astro.currentLocale || 'es';

// 2. Cargar traductor
const t = useTranslations(currentLang as 'es' | 'en');

// 3. Generar rutas din√°micas
const currentPath = Astro.url.pathname.replace(/^\/(en|es)\//, '/').replace(/^\//, ''); 
const translatePath = (lang: string) => getRelativeLocaleUrl(lang, currentPath);

const user = Astro.locals.runtime?.data?.user || (Astro.locals as any).user;
---

<header class="sticky top-0 z-50 w-full transition-colors duration-400">
  <nav class="navbar bg-base-100/90 backdrop-blur-md border-b border-base-200 transition-colors duration-400">
    
    <div class="navbar-start">
      <div class="dropdown">
        <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" /></svg>
        </div>
        <ul tabindex="0" class="menu menu-lg dropdown-content mt-3 z-1 p-2 shadow bg-base-100 rounded-box w-64">
          <li><a href={getRelativeLocaleUrl(currentLang, 'about')}>{t('nav.about')}</a></li>
          <li><a href={getRelativeLocaleUrl(currentLang, 'blog')}>{t('nav.blog')}</a></li>
        </ul>
      </div>
      
      <a href={getRelativeLocaleUrl(currentLang, '/')} class="btn btn-ghost text-xl bg-linear-to-r from-primary to-secondary bg-clip-text text-transparent hover:bg-none">
        üçÖ Sinx Pomodoro
      </a>
    </div>

    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal px-1">
        <li><a href={getRelativeLocaleUrl(currentLang, 'about')}>{t('nav.about')}</a></li>
        <li><a href={getRelativeLocaleUrl(currentLang, 'blog')}>{t('nav.blog')}</a></li>
      </ul>
    </div>

    <div class="navbar-end gap-2">
      {
        user ? (
          <LogoutButton client:load label={currentLang === 'es' ? 'Salir' : 'Logout'} />
        ) : (
            <a href={getRelativeLocaleUrl(currentLang, 'login')} class="btn btn-ghost btn-sm">
                {currentLang === 'es' ? 'Entrar' : 'Login'}
            </a>
        )
      }
      <LanguagePicker />

      <label class="swap swap-rotate btn btn-ghost btn-circle btn-sm">
        <input type="checkbox" id="theme-controller" class="theme-controller" value="dark" aria-label="Toggle theme" />
        <svg class="swap-off fill-current w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"/></svg>
        <svg class="swap-on fill-current w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"/></svg>
      </label>

    </div>
  </nav>
</header>

<script is:inline>
  const currentTheme = (() => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme');
    }
    if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
      return 'business'; 
    }
    return 'nord'; 
  })();
  document.documentElement.setAttribute('data-theme', currentTheme);
  document.addEventListener('astro:page-load', () => {
    const themeController = document.getElementById('theme-controller');
    if (themeController) {
      themeController.checked = currentTheme === 'business';
    }

 
    const themeLabel = document.querySelector('.swap');
    if (themeLabel) {
      themeLabel.addEventListener('click', () => {
        setTimeout(() => {
          const isChecked = themeController.checked;
          const newTheme = isChecked ? 'business' : 'nord';
          document.documentElement.setAttribute('data-theme', newTheme);
          localStorage.setItem('theme', newTheme);
        }, 0);
      });
    }
  });
</script>

<script is:inline>
  const savedLang = localStorage.getItem('language');

  
  // Si tenemos un idioma guardado...
  if (savedLang) {
    const p = window.location.pathname;
    // Detectar si estamos en ruta de ingl√©s (ej: /en, /en/about)
    const isEn = p.startsWith('/en/') || p === '/en';
    
    // Caso 1: Preferencia Espa√±ol ('es') pero estamos en Ingl√©s -> Ir a Ra√≠z (/)
    if (savedLang === 'es' && isEn) {
       // Reemplazamos '/en' o '/en/' del inicio por '/'
       // Ej: /en/about -> /about, /en -> /
       const newPath = p.replace(/^\/en(\/|$)/, '/');
       window.location.href = newPath || '/'; // Fallback a / si queda vac√≠o
    }
    // Caso 2: Preferencia Ingl√©s ('en') pero estamos en Espa√±ol (Ra√≠z) -> Ir a /en
    else if (savedLang === 'en' && !isEn) {
       // Agregamos /en al inicio. Si es /, se convierte en /en
       const cleanPath = p === '/' ? '' : p;
       window.location.href = `/en${cleanPath}`;
    }
  }

  document.addEventListener('astro:page-load', () => {
    // Re-bind other elements if needed, but LanguagePicker has its own is:inline
  });
</script>