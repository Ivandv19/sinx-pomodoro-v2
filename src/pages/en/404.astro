---
import Layout from "../../layouts/Layout.astro";
import { useTranslations } from "../../i18n/utils";

const t = useTranslations("en");
---

<Layout title={t("404.title")} lang="en">
    <div
        class="flex flex-col items-center justify-center min-h-[60vh] text-center space-y-6 animate-fade-in"
    >
        <div
            class="text-9xl font-black bg-gradient-to-b from-base-content/20 to-transparent bg-clip-text text-transparent select-none"
        >
            404
        </div>
        <h1 class="text-3xl font-bold">{t("404.heading")}</h1>
        <p class="text-xl text-base-content/60 max-w-md">
            {t("404.description")}
        </p>
        <a
            href="/en"
            class="btn btn-primary btn-lg rounded-full px-8 shadow-lg hover:scale-105 transition-transform text-white"
        >
            {t("404.back")}
        </a>
    </div>
</Layout>
