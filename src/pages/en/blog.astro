---
import Layout from "../../layouts/Layout.astro";
import { useTranslations } from "../../i18n/utils";

const t = useTranslations("en");
---

<Layout title={t("blog.title")} lang="en" description={t("blog.description")}>
    <div class="max-w-4xl mx-auto py-20 text-center space-y-8">
        <h1
            class="text-5xl font-extrabold bg-gradient-to-r from-primary via-secondary to-accent bg-clip-text text-transparent py-4"
        >
            {t("blog.title")}
        </h1>
        <p class="text-2xl text-base-content/80">{t("blog.comingSoon")}</p>
        <div class="card bg-base-200 shadow-xl max-w-lg mx-auto">
            <div class="card-body">
                <p class="text-lg">
                    {t("blog.body")}
                </p>
                <div class="mt-4">
                    <a href="/en" class="btn btn-primary">{t("blog.back")}</a>
                </div>
            </div>
        </div>
    </div>
</Layout>
